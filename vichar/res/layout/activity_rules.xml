<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rules_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:id="@+id/rules_picture_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rules_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="12dp"
            android:paddingLeft="4dp"
            android:shadowColor="#000000"
            android:shadowDx="0.7"
            android:shadowDy="0.7"
            android:shadowRadius="1"
            android:text="@string/rules_intro"
            android:textColor="@color/yellow_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/rules_fireballs_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/rules_fireballs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_fireballs_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_fireballs"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rules_proximity_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/rules_proximity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_proximity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_overload"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rules_minion_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/rules_minions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_minions_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_minions"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rules_health_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/rules_health"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_health_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_energy"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rules_twitter_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/rules_twitter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_twitter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_twitter"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rules_twitter_state_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/rules_twitter_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/cortex_overload" />

            <TextView
                android:id="@+id/rules_twitter_state_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0.7"
                android:shadowDy="0.7"
                android:shadowRadius="1"
                android:text="@string/rules_tw_enable"
                android:textColor="@color/yellow_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/rules_good_luck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:shadowColor="#000000"
            android:shadowDx="0.7"
            android:shadowDy="0.7"
            android:shadowRadius="1"
            android:text="@string/rules_good_luck"
            android:textColor="@color/yellow_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</HorizontalScrollView>