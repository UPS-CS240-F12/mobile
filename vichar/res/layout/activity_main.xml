
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_portrait" 
    android:orientation="vertical" 
    android:weightSum="6.5">
    
    <View 
        android:layout_weight=".25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
	<ImageView 
	    android:layout_weight="3"
	    android:id="@+id/vichar_robot"
	    android:layout_gravity="center"
	    android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:src="@drawable/robot_icon_large_mdpi"
	    />
	    
    <View 
        android:layout_weight=".25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
	
    <Button
        android:id="@+id/login_with_twitter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="authorizeTwitter"
        android:text="@string/login_with_twitter"
        android:includeFontPadding="true"
        android:textColor="@drawable/grayscale_button_txt"
        style="@style/ShadowTextStyle"
        android:textSize="28sp"
        android:background="@drawable/twitter_button_bg"
        android:drawableRight="@drawable/twitter_icon_white"
		android:layout_margin="5dp"
		android:layout_weight="1.61803398875"
             	   android:paddingRight="5dp"
                   android:paddingBottom="5dp"
                   android:gravity="center|left" />

    <Button
        android:drawableRight="@drawable/user"
        android:id="@+id/login_with_vichar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@drawable/grayscale_button_txt"
        style="@style/ShadowTextStyle"
        android:background="@drawable/grayscale_button_bg"
        android:onClick="authorizeLoginwithVichar"
        android:text="@string/play_as_guest"
		android:layout_margin="5dp"
             	   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingRight="5dp"
                   android:gravity="center|left"
                   android:layout_weight="1" />
    


</LinearLayout>
