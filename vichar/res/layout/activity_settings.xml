<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="10"
    android:background="@drawable/settings_portrait">

    <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:layout_weight="2"
         android:weightSum="2"
         android:orientation="horizontal">
	    <Button
	        android:drawableBottom="@drawable/arrow_up_left_2"
	        android:layout_width="0dp"
      		android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:layout_marginTop="1dp"
        	android:gravity="left|top"
	        android:id="@+id/main_menu_button"
	        android:layout_margin="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
	        android:textColor="@drawable/game_button_txt"
	        style="@style/ShadowTextStyle"
	        android:background="@drawable/rules_button_bg"
	        android:text="@string/enter_main_menu" />
	    <Button
	        android:drawableBottom="@drawable/comments"
	        android:id="@+id/about_button"
	        android:layout_width="0dp"
      		android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:gravity="left|top"
        	android:layout_marginTop="1dp"
	        android:layout_margin="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
	        android:text="@string/enter_about" 
	        android:textColor="@drawable/grayscale_button_txt"
	        style="@style/ShadowTextStyle"
	        android:background="@drawable/settings_button_bg"/>
	</LinearLayout>
	
    <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:layout_weight="2"
         android:weightSum="2"
         android:orientation="horizontal">
	    <Button 
	        android:drawableBottom="@drawable/user"
	        android:id="@+id/logout_twitter_button"
	        android:layout_width="0dp"
	        android:gravity="left|top"
      		android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:layout_marginTop="1dp"
	        android:layout_margin="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
	        android:text="@string/logout_twitter"
	        android:textColor="@drawable/grayscale_button_txt"
	        style="@style/ShadowTextStyle"
	        android:background="@drawable/scores_button_bg"
	        />
	    
	    <Button
	        android:id="@+id/toggle_sound_button"
	        android:layout_width="0dp"
      		android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:layout_marginTop="1dp"
	        android:layout_margin="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="left|top"
	        android:text="@string/toggle_sound"
	        android:textColor="@drawable/grayscale_button_txt"
	        style="@style/ShadowTextStyle"
	        android:background="@drawable/grayscale_button_bg"
	        />
    </LinearLayout>

</LinearLayout>
