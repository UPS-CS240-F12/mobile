<?xml version="1.0" encoding="utf-8"?>

<!--This .xml file sets the background for the game button-->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- pressed -->
  <item android:state_pressed="true" >
    <!--using shape allows us to have rounded corners and gradients on 
    our buttons-->
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
	  <gradient android:startColor="#FFFFAD" android:endColor="#FFFFDF" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- focused -->
  <item android:state_focused="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
      <gradient android:startColor="#FFFFAD" android:endColor="#FFFFDF" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- default -->
  <item>
    <shape>
      <gradient android:startColor="#FDD017" android:endColor="#FFFF49" android:angle="270" />
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
    </shape>
  </item>    

</selector>