<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- pressed -->
  <item android:state_pressed="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
	  <gradient android:startColor="#89FF96" android:endColor="#BBFFC8" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- focused -->
  <item android:state_focused="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
      <gradient android:startColor="#89FF96" android:endColor="#BBFFC8" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- default -->
  <item>
    <shape>
      <gradient android:startColor="#347235" android:endColor="#57E964" android:angle="270" />
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
    </shape>
  </item>    

</selector>