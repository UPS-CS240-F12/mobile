<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- pressed -->
  <item android:state_pressed="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
	  <gradient android:startColor="#FF7F7B" android:endColor="#8FC9FF" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- focused -->
  <item android:state_focused="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
      <gradient android:startColor="#FF7F7B" android:endColor="#8FC9FF" android:angle="270" />
      <corners android:radius="18dp" />
    </shape>
  </item>
 
  <!-- default -->
  <item>
    <shape>
      <gradient android:startColor="#E41B17" android:endColor="#2B65EC" android:angle="270" />
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="18dp" />
    </shape>
  </item>    

</selector>