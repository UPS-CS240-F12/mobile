<?xml version="1.0" encoding="utf-8"?>

<!--This .xml file sets the background for the game button-->

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true" >
    
    <!-- pressed --> 
    <item android:drawable="@drawable/pressed_blue" android:state_pressed="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/pressed_blue" android:state_focused="true"/>
    <!-- default -->
    <item android:drawable="@drawable/game_button_ani" /> 
    
</selector>